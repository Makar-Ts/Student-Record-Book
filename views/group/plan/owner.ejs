<% 
function capitalizeFirstLetter(string) {
    return string.charAt(0).toUpperCase() + string.slice(1);
}
 %>

<div class="container">
    <% for (var i=0; i<days.length; i++) { %>
        <div class="w-100 mt-3">
            <h3><%= capitalizeFirstLetter(weekdays[""+(i+1)%7]) %></h3>
            <% for (var [index, subj] of days[i].entries()) { 
                let class_mod = ""
                if (days[i].length > 1) {
                    if (index == 0) {
                        class_mod = "no-bottom-border"
                    } else if (index == days[i].length-1) {
                        class_mod = "no-top-border"
                    } else {
                        class_mod = "no-top-border no-bottom-border"
                    }
                }
                %>
                <ul class="list-group list-group-horizontal d-flex justify-content-between align-items-start mt-0">
                    <li class="list-group-item disabled <%= class_mod %>" style="width: 20%;">#<%= subj.id %></li>
                    <li class="list-group-item <%= class_mod %>" style="width: 20%;"><%= subj.time %></li>
                    <li class="list-group-item w-50 <%= class_mod %>"><%= subj.name %></li>
                    <li class="list-group-item w-100 <%= class_mod %>"><%= subj.description == "" ? "-" : subj.description %> </li>
                </ul>
            <% } %>
        </div>
    <% } %>
</div>